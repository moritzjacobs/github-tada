{
	"name": "github-tada",
	"version": "1.2.3",
	"description": "Browse Github issues by reaction",
	"author": "Moritz Jacobs <mail@moritzjacobs.de>",
	"license": "MIT",
	"scripts": {
		"build": "rm -rf dist/ && rm -rf ./web-ext-artifacts && yarn webpack && web-ext build -o && yarn publishSrc",
		"dev": "webpack -w & web-ext run -t firefox-desktop -t chromium",
		"dev:chrome": "webpack -w & web-ext run -t chromium",
		"dev:ff": "webpack -w & web-ext run",
		"format:fix": "eslint ./src --fix",
		"format:scripts": "scriptlint --fix",
		"other:publishSrc": "zip -r ../github-tada-src.zip ./ -x ./.scripts/\\* ./dist/\\* ./node_modules/\\* ./web-ext-artifacts/\\* ./.git/\\*",
		"other:updates": "updtr",
		"start": "yarn dev",
		"test": "yarn test:unit && yarn test:lint && yarn test:types",
		"test:lint": "eslint ./src",
		"test:scripts": "scriptlint",
		"test:types": "tsc -p tsconfig.json --noEmit true",
		"test:unit": "jest",
		"test:watch": "jest --watch"
	},
	"scriptlint": {
		"strict": true
	},
	"devDependencies": {
		"@types/jest": "24.9.1",
		"@types/react": "16.9.11",
		"@types/react-dom": "16.9.5",
		"@types/react-test-renderer": "16.9.2",
		"@typescript-eslint/eslint-plugin": "2.17.0",
		"@typescript-eslint/parser": "2.17.0",
		"css-loader": "3.4.2",
		"eslint": "6.8.0",
		"eslint-config-peerigon": "25.2.0",
		"eslint-import-resolver-typescript": "2.0.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prefer-arrow": "1.1.7",
		"eslint-plugin-react": "7.18.0",
		"eslint-plugin-react-hooks": "2.3.0",
		"jest": "25.1.0",
		"mini-css-extract-plugin": "0.9.0",
		"node-sass": "4.13.1",
		"react-test-renderer": "16.12.0",
		"sass-loader": "8.0.2",
		"scriptlint": "^0.0.1",
		"style-loader": "1.1.3",
		"ts-jest": "25.0.0",
		"ts-loader": "6.2.1",
		"typescript": "3.7.5",
		"updtr": "^3.1.0",
		"web-ext": "4.0.0",
		"webpack": "4.41.5",
		"webpack-cli": "3.3.10"
	},
	"dependencies": {
		"react": "16.12.0",
		"react-dom": "16.12.0"
	}
}
